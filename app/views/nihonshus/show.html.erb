<style>
  .show-container {
    text-align: center;
    margin: 0 auto;
    width: 100%;
    max-width: 900px;
    overflow: hidden;
  }
  .sake-pic > img {
    width: 100%;
    height: auto;
  }
  @media only screen and (max-width : 600px) {
    .show-container {
      /*background-color: blue;*/
      /*color: rgba(244, 66, 66, 0.8);*/
      color: rgba(0,0,0,0.7);
    }
    .name {
      padding: 20px 0px 10px 0px;
      font-size: 40px;
      font-weight: bolder;
    }
    .show-button {
      padding-bottom: 20px;
    }
    .more-button {
      width: 200px;
      height: 30px;
      font-size: 15px;
      padding: 2px;
    }
    .info {
      text-align: left;
      margin: 0 auto;
      padding-left: 15px;
      padding-right: 15px;
      width: 90%;
      border-bottom: solid 3px rgba(0,0,0,0.2);
    }
    #rating-integer {
      font-size: 30px;
    }
    .star {
      color: rgba(0,0,0,0.2);
    }
    .info > p > i {
      font-size: 25px;
    }
    #starred {
      color: #DB665D;
    }
    .summary {
      text-align: left;
      margin: 0 auto;
      /*padding-top: 15px;*/
      padding-bottom: 15px;
      width: 90%;
      border-bottom: solid 3px rgba(0,0,0,0.2);
    }
    .summary > h2 {
      text-align: center;
      font-size: 30px;
    }
    .summary-down {
      font-size: 16px;
    }
    .summary-flex {
      display: flex;
      align-content: space-between;
    }
    .col-xs-6 > div > p {
      margin: 0;
    }
    .col-margins {
      margin: 10px 0px;
    }
    .reviews-container {
      width: 90%;
      margin: 0 auto;
      border-bottom: solid 3px rgba(0,0,0,0.2);
    }
    .reviews-container > h2 {
      text-align: center;
      font-size: 30px;
    }
    .single-review {
      text-align: left;
      margin-bottom: 50px;
      margin-top: 20px;
      border-bottom: solid 1px rgba(0,0,0,0.1);
    }
    .single-review > h3 {
      font-size: 20px;
      margin-top: 5px;
    }
  }
</style>

<div class="show-container">
  <div class="row">
    <div class="col-sm-6">
      <div class="sake-pic">
        <%= image_tag 'http://www.uwajimaya.com/static/ee_images/made/878e984abaf6f3f9/sake_large2_752_501_90.jpg' %>
      </div>
      <div class="sake-info">
        <div class="name">
          <%= @nihonshu.name %>
        </div>
        <div class="show-button">
          <a href="#" class="btn btn-primary more-button">Buy Sake</a>
        </div>



        <%= simple_form_for [@nihonshu, @saving] do |f| %>
          <%#= f.button :submit %>
          <%= f.submit 'Save' %>
        <% end %>





        <div class="info">
          <p><strong id="rating-integer">4.7</strong>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" aria-hidden="true"></i>
          </p>
        </div>
      </div>
    </div>



    <div class="col-sm-6">
      <div class="summary">
        <h2>Summary</h2>
        <div class="row">
          <div class="col-xs-6">
            <div class="col-margins">
              <p>Factory name:</p>
              <p class="summary-down">Okayama S.B.</p>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <p>Region:</p>
              <p class="summary-down">Okayama</p>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <p>Rice type:</p>
              <p class="summary-down">Normal rice</p>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <p>Food pairing:</p>
              <p class="summary-down">Beef - Fish</p>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <p>Taste:</p>
              <p class="summary-down">Sweet</p>
            </div>
          </div>
        </div>
      </div>
    </div>



    <div class="col-sm-12">
      <div class="reviews-container">
        <h2>Reviews</h2>
        <div id="reviews">
          <% if @nihonshu.reviews.blank? %>
            <p>Be the first to review!</p>
          <% else %>
            <% @nihonshu.reviews.each do |review| %>
              <%= render 'reviews/show', review: review %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="review-form" style="padding: 15px;">
        <%= render 'reviews/form', nihonshu: @nihonshu, review: @review %>
      </div>
    </div>

