<style>
  .show-container {
    text-align: center;
    margin: 0 auto;
    width: 100%;
    max-width: 900px;
    overflow: hidden;
  }
  .sake-pic > img {
    width: auto;
    height: 200px;
  }
  .text-card {
    font-size: 12px;

  }
  @media only screen and (max-width : 600px) {
    .show-container {
      /*background-color: blue;*/
      /*color: rgba(244, 66, 66, 0.8);*/
      color: rgba(0,0,0,0.7);
    }
    .name {
      padding: 20px 10px 10px 10px;
      font-size: 30px;
      font-weight: bolder;
    }
    .show-button {
      padding-bottom: 10px;
      text-align: center;
      padding-right: 10px;
      padding-left: 10px;
    }
    .show-button > a {
      text-decoration: none;
    }
    .more-button {
      width: 100%;
      /*height: 30px;*/
      font-size: 15px;
      padding: 5px;
/*      background-color: red;
      border: solid 2px black;*/
    }
    .red-button {
      width: 100%;
/*      height: 10px;*/
      font-size: 15px;
      padding: 8px 0;
      margin-bottom: 10px;
      font-size: 20px;
    }
    .info {
      text-align: center;
      margin: 0 auto;
      padding-left: 15px;
      padding-right: 15px;
      width: 90%;
      margin-bottom: 20px;
    }
    #rating-integer {
      font-size: 30px;
    }
    .star {
      color: rgba(0,0,0,0.2);
    }
    .info > p > i {
      font-size: 25px;
    }
    #starred {
      color: #DB665D;
    }
    .summary {
      text-align: left;
      margin: 0 auto;
      /*padding-top: 15px;*/
      padding-bottom: 15px;
      width: 90%;
      border-bottom: solid 3px rgba(0,0,0,0.2);
      margin-top: 20px;
      border-top: solid 3px rgba(0,0,0,0.2);

    }
    .summary > h2 {
      text-align: center;
      font-size: 30px;
    }
    .summary-down {
      font-size: 16px;
    }
    .summary-flex {
      display: flex;
      align-content: space-between;
    }
    .col-xs-6 > div > p {
      margin: 0;
    }
    .col-margins {
      margin: 10px 0px;
    }
    .reviews-container {
      width: 90%;
      margin: 0 auto;
      border-bottom: solid 3px rgba(0,0,0,0.2);
    }
    .reviews-container > h2 {
      text-align: center;
      font-size: 30px;
    }
    .single-review {
      text-align: left;
      margin-bottom: 50px;
      margin-top: 20px;
      border-bottom: solid 1px rgba(0,0,0,0.1);
    }
    .single-review > h3 {
      font-size: 20px;
      margin-top: 5px;
    }
  }
</style>

<div class="show-container">
  <div class="row">
    <div class="col-sm-6">
      <div class="sake-pic">
        <!-- <%= image_tag 'http://www.uwajimaya.com/static/ee_images/made/878e984abaf6f3f9/sake_large2_752_501_90.jpg' %> -->
        <%= image_tag @nihonshu.image_url %>
      </div>
      <div class="sake-info">
        <div class="name">
          <%= @nihonshu.name %>
        </div>

    <div class="info">
          <p><strong id="rating-integer">4.7</strong>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" id="starred" aria-hidden="true"></i>
            <i class="fa fa-star star" aria-hidden="true"></i>
          </p>
        </div>

        <div class="show-button">
          <div class="row">
            <div class="col-xs-12">
              <%= link_to "Compare", search_path(nihonshu_id: @nihonshu.id, search: params[:search]), class: "btn btn-danger red-button" %>
            </div>
            <div class="col-xs-6">
              <a href="https://search.rakuten.co.jp/search/mall/<%= @nihonshu.name%>/" class="btn btn-primary more-button">Buy</a>
            </div>
            <div class="col-xs-6">
              <% if @nihonshu.save %>
                <%= simple_form_for [@nihonshu, @saving] do |f| %>
                  <%#= f.button :submit %>
                  <%= f.submit 'Saved', { class: 'btn btn-secondary more-button' } %>
                <% end %>
              <% else %>
                <%= simple_form_for [@nihonshu, @saving] do |f| %>
                  <%#= f.button :submit %>
                  <%= f.submit 'Save', { class: 'btn btn-primary more-button' } %>
                <% end %>
              <% end %>

            </div>
          </div>
        </div>



      </div>
    </div>

    <div class="col-sm-6">
      <div class="summary">
        <h2>Summary</h2>
        <div class="row">
          <div class="col-xs-6">
            <div class="col-margins">
              <div class="text-card">
              <p>Region: <%= @nihonshu.region.capitalize%> </p>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
            <div class="text-card">
              <p>Avg. Price: Â¥ <%= @nihonshu.price %></p>
            </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <div class="text-card">
                Food Pairs:
                <% if @nihonshu.taste <= 2%>
                  Fish
                <% elsif @nihonshu.taste == 3 %>
                  Goat
                <% else %>
                  Duck
                <%end%>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <div class="text-card">
                <p>Classification: <%= @nihonshu.classification.capitalize %></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
              <div class="text-card">
                <p>Aroma: <%= @nihonshu.aroma.capitalize%></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-margins">
            <% if @nihonshu.taste == 1 %></p>
              <p><div class="text-card">Taste: Very Sweet</div></p>
            <% elsif @nihonshu.taste == 2 %>
              <p><div class="text-card">Taste: Sweet</div></p>
            <% elsif @nihonshu.taste == 3 %>
              <p><div class="text-card">Taste: Neutral</div></p>
            <% elsif @nihonshu.taste == 4 %>
              <p><div class="text-card">Taste: Dry </div></p>
            <%else%>
              <p> Taste: Very Dry </p>
            <%end%>
            </div>
          </div >
        </div>
      </div>
    </div>



    <div class="col-sm-12">
      <div class="reviews-container">
        <h2>Reviews</h2>
        <div id="reviews">
          <% if @nihonshu.reviews.blank? %>
            <p>Be the first to review!</p>
          <% else %>
            <% @nihonshu.reviews.each do |review| %>
              <%= render 'reviews/show', review: review %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="review-form" style="padding: 15px;">
        <%= render 'reviews/form', nihonshu: @nihonshu, review: @review %>
      </div>
    </div>

